{
    "manifest_version" : 3, 
    "name": "Retro-Vison",
    "version": "1.0",
    "permissions":["storage", "tabs", "activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "css": ["style.css"]
        }
    ]
}
